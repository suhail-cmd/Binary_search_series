#python
arr1 = [1,3,5,7]
arr2 = [2,4,6,8]
i,j = 0,0
res = []
n1,n2 = len(arr1),len(arr2)
while i < n1 and j < n2:
    if arr1[i] < arr2[j]:
        res.append(arr1[i])
        i+=1
    else:
        res.append(arr2[j])
        j+=1 
while i < n1:
    res.append(arr1[i])
    i+=1
while j < n2:
    res.append(arr2[j])
    j+=1
print(res)
n = len(res)
if n % 2 != 0:
    median = res[n//2] 
else:
    median = (res[n // 2 - 1] + res[n //2])/2
print(median)
        
