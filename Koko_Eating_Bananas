#python
def intake_of_bananas(arr,speed):
    totalhrs = 0 
    for banana in arr:
        totalhrs += math.ceil(banana/speed)
    return totalhrs
            
def koko_per_piel(arr,h):
    max_speed = max(arr)   # biggest pile
    for speed in range(1,max_speed +1):   # try all speeds
        totalhrs = intake_of_bananas(arr,speed)
        if totalhrs <= h:
            return speed
    return -1
###########################
import math
def time_of_bananas(arr,mid):
    total_hrs = 0
    for i in range(len(arr)):
        total_hrs += math.ceil(arr[i]/mid)
    return total_hrs
    
def koko_bananas(arr,h):
    low,high = 1 , max(arr)
    ans = float('inf')
    while low <= high:
        mid = (low + high)//2
        total_hrs = time_of_bananas(arr,mid)
        if total_hrs <= h:
            ans = mid
            high = mid - 1 
        else:
            low = mid +  1 
    return ans
